{
  "name": "graphql-api-starter",
  "version": "0.0.1",
  "description": "GraphQL API Starter",
  "main": "src/server.ts",
  "keywords": [
    "nodejs",
    "graphql",
    "relay",
    "fastify",
    "typescript",
    "starter"
  ],
  "author": "Involved Tech <developers@involved.com.br>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/involvedtechbr/graphql-api-starter.git"
  },
  "bugs": {
    "url": "https://github.com/involvedtechbr/graphql-api-starter/issues"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup src/server.ts",
    "start": "node --env-file=.env dist/server.cjs",
    "dev": "NODE_OPTIONS='--loader tsx watch' node --env-file=.env src/server.ts",
    "config:env": "cp .env.example .env",
    "test": "jest",
    "schema": "tsx scripts/updateSchema.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,md}\" '!./data'",
    "prettier:format": "prettier --write \"**/*.{ts,tsx,md}\" '!./data'",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "docker:compose": "docker-compose --env-file ./.env up -d"
  },
  "peerDependencies": {
    "graphql": "^16.0.0"
  },
  "dependencies": {
    "@entria/graphql-mongo-helpers": "^1.1.2",
    "@fastify/cors": "^8.3.0",
    "bcrypt": "^5.1.1",
    "dataloader": "^2.2.2",
    "fastify": "^4.23.0",
    "graphql": "^16.8.0",
    "graphql-relay": "^0.10.0",
    "mercurius": "^13.1.0",
    "mongoose": "^7.5.0",
    "pino": "^8.15.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.11",
    "@babel/node": "^7.22.10",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-typescript": "^7.22.11",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.6.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "mongodb-memory-server": "^8.15.1",
    "pino-pretty": "^10.2.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "^20.6.1"
  }
}
